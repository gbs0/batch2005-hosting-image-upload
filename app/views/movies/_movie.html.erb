<div id="<%= dom_id movie %>">
  <div class="card" style="width: 18rem;">
    <!-- <img src="..." class="card-img-top" alt="..."> -->
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Rating: <%= movie.rating %></li>
      <li class="list-group-item">Director: <%= movie.director_name %></li>
    </ul>
    <div class="card-body">
      <%= link_to "Edit this movie", edit_movie_path(movie), class: "card-link btn btn-sm btn-primary" %>
    </div>
  </div>
</div>
