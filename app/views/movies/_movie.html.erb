<div id="<%= dom_id movie %>">
  <div class="card" style="width: 18rem;">
    <% if movie.poster.attached? %>
      <% @movie.poster.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Rating: <%= movie.rating %></li>
      <li class="list-group-item">Director: <%= movie.director_name %></li>
    </ul>
    <div class="card-body">
      <%= link_to "Edit this movie", edit_movie_path(movie), class: "card-link btn btn-sm btn-primary" %>
      <%= link_to "Remove poster", remove_poster_path(movie), class: "card-link btn btn-sm btn-danger" %>
    </div>
  </div>
</div>
